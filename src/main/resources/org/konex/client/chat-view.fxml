<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.konex.client.controller.ChatController">
    <SplitPane dividerPositions="0.3" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <VBox prefHeight="598.0" prefWidth="266.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                <HBox alignment="CENTER_LEFT" prefHeight="50.0"
                      style="-fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                    <Label maxWidth="1.7976931348623157E308" text="Chats" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                    <Button mnemonicParsing="false" text="+" onAction="#onCreateGroupClick"
                            style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;">
                        <tooltip>
                            <javafx.scene.control.Tooltip text="Buat Grup Baru"/>
                        </tooltip>
                    </Button>
                </HBox>

                <ListView fx:id="chatList" VBox.vgrow="ALWAYS" style="-fx-background-insets: 0; -fx-padding: 0;"/>

                <HBox alignment="CENTER" prefHeight="50.0"
                      style="-fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                    <Button text="Logout" onAction="#onLogoutClick"
                            maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-text-fill: #FF5252; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Button>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </HBox>
            </VBox>
        </AnchorPane>

        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <VBox prefHeight="598.0" prefWidth="626.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="626.0"
                      style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
                    <padding>
                        <Insets left="20.0" right="20.0"/>
                    </padding>
                    <Label fx:id="headerLabel" text="Global Chat Room" maxWidth="1.7976931348623157E308"
                           HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                </HBox>

                <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER"
                            prefHeight="480.0" prefWidth="626.0"
                            style="-fx-background: #e5ddd5; -fx-background-color: #e5ddd5;"
                            VBox.vgrow="ALWAYS">

                    <VBox fx:id="messageContainer" spacing="10.0" style="-fx-background-color: #e5ddd5;">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>
                </ScrollPane>

                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="626.0" spacing="10.0"
                      style="-fx-background-color: #f0f0f0;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Button mnemonicParsing="false" onAction="#onAttachImageClick" text="ðŸ“·"
                            prefHeight="40.0" prefWidth="75.0"
                            style="-fx-background-color: #f0f0f0; -fx-text-fill: #555; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-cursor: hand;">
                        <font>
                            <Font size="18.0"/>
                        </font>
                        <tooltip>
                            <Tooltip text="Kirim Gambar"/>
                        </tooltip>
                    </Button>
                    <TextArea fx:id="messageInput" prefHeight="40.0" prefWidth="450.0"
                              promptText="Ketik pesan..." wrapText="true" HBox.hgrow="ALWAYS"
                              style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
                    <Button defaultButton="true" mnemonicParsing="false" onAction="#onSendClick"
                            prefHeight="40.0" prefWidth="80.0"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;"
                            text="Kirim">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </AnchorPane>
    </SplitPane>
</AnchorPane>