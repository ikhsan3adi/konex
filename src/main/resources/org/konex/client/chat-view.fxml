<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.konex.client.controller.ChatController">
    <SplitPane dividerPositions="0.3" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <VBox prefHeight="598.0" prefWidth="266.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #f0f0f0;">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                    <Label maxWidth="1.7976931348623157E308" text="Daftar Chat" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <Button mnemonicParsing="false" text="+" onAction="#onCreateGroupClick"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;">
                        <tooltip>
                            <javafx.scene.control.Tooltip text="Buat Grup Baru"/>
                        </tooltip>
                    </Button>
                </HBox>

                <ListView fx:id="chatList" VBox.vgrow="ALWAYS"/>
            </VBox>
        </AnchorPane>

        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <VBox prefHeight="598.0" prefWidth="626.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="626.0"
                      style="-fx-background-color: #eeeeee; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
                    <padding>
                        <Insets left="20.0" right="20.0"/>
                    </padding>
                    <Label fx:id="headerLabel" text="Global Chat Room" maxWidth="1.7976931348623157E308"
                           HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Button text="Keluar" onAction="#onLogoutClick"
                            style="-fx-background-color: #FF5252; -fx-text-fill: white;"/>
                </HBox>

                <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER" prefHeight="480.0"
                            prefWidth="626.0"
                            style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                    <VBox fx:id="messageContainer" spacing="10.0" style="-fx-background-color: white;">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>
                </ScrollPane>

                <HBox alignment="CENTER" prefHeight="80.0" prefWidth="626.0" spacing="10.0"
                      style="-fx-background-color: #dddddd;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Button mnemonicParsing="false" onAction="#onAttachImageClick" text="ðŸ“·">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                    <TextArea fx:id="messageInput" prefHeight="50.0" prefWidth="500.0"
                              promptText="Ketik pesan..." wrapText="true" HBox.hgrow="ALWAYS"/>
                    <Button defaultButton="true" mnemonicParsing="false" onAction="#onSendClick"
                            prefHeight="50.0" prefWidth="80.0"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Kirim">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </AnchorPane>
    </SplitPane>
</AnchorPane>